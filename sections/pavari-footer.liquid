<div class="custom-footer">
    <nav aria-label="Footer navigation">
        <ul class="footer-nav">
            {% comment %}<li><a href="/shop">SHOP</a></li>{% endcomment %}
            {% comment %}<li><a href="/pages/cocktails">COCKTAILS</a></li>{% endcomment %}
            {% comment %}<li><a href="/pages/our-story">OUR STORY</a></li>{% endcomment %}
            {% comment %}<li><a href="/pages/awards">AWARDS</a></li>{% endcomment %}
            {% comment %}<li><a href="/pages/contacts">CONTACTS</a></li>{% endcomment %}
            {%- for link in section.settings.menu.links -%}
                <li><a href="{{- link.url -}}">{{- link.title | escape -}}</a></li>
            {%- endfor -%}
        </ul>
    </nav>
    {% comment %}<hr />{% endcomment %}
    <div class="custom-footer_outro-container">
        {%- if section.settings.footer_logo != blank -%}
            {{
            section.settings.footer_logo
            | image_url: width: 160
            | image_tag:
            sizes: sizes,
            widths: '50, 75, 100, 160'
            }}
        {% endif %}
        <p class="outro-text" style="">MADE TO BE NOTICED</p>
    </div>
    {% comment %}<hr />{% endcomment %}
    <div class="custom-footer_copyright">
        <ul class="social-nav">
            <li><a href="https://www.facebook.com/people/Pavari-17/61577673938559/" target="_blank"><span class="svg-wrapper">{{- 'icon-facebook.svg' | inline_asset_content -}}</span></a></li>
            {% comment %}<li><span class="svg-wrapper">{{- 'icon-x.svg' | inline_asset_content -}}</span></li>{% endcomment %}
            <li><a href="https://www.tiktok.com/@pavari17" target="_blank"><span class="svg-wrapper">{{- 'icon-tiktok.svg' | inline_asset_content -}}</span></a></li>
            {% comment %}<li><span class="svg-wrapper">{{- 'icon-youtube.svg' | inline_asset_content -}}</span></li>{% endcomment %}
            <li><a href="https://www.instagram.com/drink_pavari17/" target="_blank"><span class="svg-wrapper">{{- 'icon-instagram.svg' | inline_asset_content -}}</span></a></li>
        </ul>
        <ul class="terms-nav">
            <li>Â© 2026 PAVARI17. All rights reserved. </li>
            <li>&nbsp;|&nbsp;</li>
            <li><a href="/pages/{{ section.settings.terms_page }}">Terms of Service</a></li>
            <li>&nbsp;|&nbsp;</li>
            <li><a href="/pages/{{ section.settings.privacy_page }}">Privacy Policy</a></li>
        </ul>
    </div>
</div>

{% schema %}
{
  "name": "Custom Footer",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "t:sections.video.settings.cover_image.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "page",
      "id": "privacy_page",
      "label": "Privacy Policy Page"
    },
    {
      "type": "page",
      "id": "terms_page",
      "label": "Terms of Service Page"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Custom Footer",
      "blocks": []
    }
  ]
}
{% endschema %}
